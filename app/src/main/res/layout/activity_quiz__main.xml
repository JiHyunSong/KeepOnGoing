<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.secsm.keepongoing.AddStudyRoomActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/buttongroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/multiplechoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="객관식"
                bootstrapbutton:bb_roundedCorners="true" />


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/essay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/multiplechoice"
                android:text="주관식"
                bootstrapbutton:bb_roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/tf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/essay"
                android:text="T/F"
                bootstrapbutton:bb_roundedCorners="true" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttongroup">

            <RelativeLayout
                android:id="@+id/quiz_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/problemandsubject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/문제"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="문제"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:entries="@array/subject"
                        android:prompt="@string/subject_prompt" />

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@id/spinner1"
                        android:text="과목"
                        android:textSize="20dp" />

                </RelativeLayout>

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/txtOne"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/problemandsubject"
                    android:layout_margin="10dp"
                    android:gravity="top|left"
                    android:hint="rounded"
                    android:lines="10"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    bootstrapbutton:be_roundedCorners="true"
                    bootstrapbutton:be_state="info" />

                <ListView
                    android:id="@+id/listView_Quiz"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/txtOne"
                    android:descendantFocusability="afterDescendants"
                    android:scrollbars="vertical"
                    android:transcriptMode="normal"></ListView>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/listView_Quiz"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제출" />
                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
