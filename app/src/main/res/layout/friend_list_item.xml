<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iconFriend"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/friend_img_qr_viewfinder" />

    <TextView
        android:id="@+id/isMasterFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iconFriend"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iconFriend"
        android:text="방장"
        android:textColor="#ff0000"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtFriendNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iconFriend"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/iconFriend"
        android:gravity="left"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtFriendScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iconFriend"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/iconFriend"
        android:gravity="right"
        android:textColor="#0000cd"
        android:textSize="20sp" />

</RelativeLayout>
