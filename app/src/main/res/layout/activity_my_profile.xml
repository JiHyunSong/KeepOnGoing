<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroud_image"
    tools:context="com.secsm.keepongoing.MyProfileActivity">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@drawable/background_paper">
    <RelativeLayout
        android:id="@+id/my_profile_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/my_profile_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/my_profile_image_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/friend_img_qr_viewfinder"
                />

            <Button
                android:id="@+id/my_profile_image_crop_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_image_iv"
                android:text="프로필 설정" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_profile_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/my_profile_rl1"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/my_profile_rl1">

            <TextView
                android:id="@+id/my_profile_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:text="내 닉네임 :" />

            <TextView
                android:id="@+id/my_profile_my_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_tv1"
                android:layout_margin="5dp"
                android:ems="10"
                android:text="" />

            <TextView
                android:id="@+id/my_profile_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_my_nickname"
                android:layout_margin="5dp"
                android:ems="10"
                android:text="내 목표시간 :" />

            <TextView
                android:id="@+id/my_profile_my_target_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_tv2"
                android:layout_margin="5dp"
                android:ems="10"
                android:text="" />

            <TextView
                android:id="@+id/my_profile_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_my_target_time"
                android:layout_margin="5dp"
                android:ems="10"
                android:text="내 전화번호 : "
                android:visibility="gone" />

            <TextView
                android:id="@+id/my_profile_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_tv3"
                android:layout_margin="5dp"
                android:ems="10"
                android:text=""
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

</RelativeLayout>
