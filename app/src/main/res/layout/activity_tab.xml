<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.secsm.keepongoing.TabActivity">

    <LinearLayout
        android:id="@+id/tab_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">


        <ImageButton
            android:id="@+id/imgBtn_tab_stopwatch"
            android:text="@string/tab1"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/profile_default"/>

        <ImageButton
            android:id="@+id/imgBtn_tab_friends"
            android:text="@string/tab2"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_friend"/>

        <ImageButton
            android:id="@+id/imgBtn_tab_rooms"
            android:text="@string/tab3"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/profile_default"/>

        <ImageButton
            android:id="@+id/imgBtn_tab_settings"
            android:text="@string/tab4"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/profile_default"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/tab_name"
        android:id="@+id/tab_stopwatch_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="현재 시간"
                android:id="@+id/currenttime"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="현재 시간"
                android:textSize="40dp"
                android:id="@+id/currenttime2"
                android:gravity="center"
                />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/kkk"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="100dp"
            >

        <TextView
            android:id="@+id/goal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="목표 시간"
            android:textSize="30dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="30dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/goal_time"/>
        <TextView
            android:id="@+id/achive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="달성 시간"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:layout_marginRight="50dp"
            android:textSize="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/achive_time"/>
        </RelativeLayout>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alram"
            android:layout_marginBottom="55dp"
            android:textSize="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout" />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textSize="35dp"
            android:layout_alignBottom="@+id/button1"
            />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/linearLayout"
            android:layout_above="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:textOff=""
                android:textOn=""
                android:textSize="30dp"
                android:id="@+id/toggleButton2"
                android:background="@drawable/selector_tab_play_button"
                />


            <Button
                android:id="@+id/ringring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_tab_stop_button"/>




        </LinearLayout>




    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/tab_name"
        android:id="@+id/tab_friends_layout"
        android:layout_width="fill_parent"
        android:visibility="invisible"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/friend_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />



    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/tab_name"
        android:id="@+id/tab_rooms_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible">

        <ListView
            android:id="@+id/room_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/tab_name"
        android:id="@+id/tab_settings_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible">

        <ListView
            android:id="@+id/setting_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

    </RelativeLayout>

</RelativeLayout>
