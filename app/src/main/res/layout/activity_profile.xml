<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.secsm.keepongoing.ProfileActivity">


    <ScrollView
        android:id="@+id/profile_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <RelativeLayout
                android:id="@+id/nickname_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자 닉네임 :"
                    android:textColor="#0000cd"
                    android:layout_margin="5dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_below="@id/tvNickname"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/tvPassword1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 :"
                    android:textColor="#0000cd"
                    android:layout_margin="5dp"
                    android:layout_below="@id/txtNickName"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtPassword1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_below="@id/tvPassword1"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/tvPassword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인:"
                    android:textColor="#0000cd"
                    android:layout_margin="5dp"
                    android:layout_below="@id/txtPassword1"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvAlert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#cd0000"
                    android:layout_margin="5dp"
                    android:layout_below="@id/txtPassword1"
                    android:layout_toRightOf="@id/tvPassword2"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtPassword2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_below="@id/tvPassword2"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/tvPhoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호 :"
                    android:textColor="#0000cd"
                    android:layout_margin="5dp"
                    android:layout_below="@id/txtPassword2"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtPhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_below="@id/tvPhoneNum"
                    android:inputType="phone" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@id/txtPhoneNum"
                    android:layout_centerHorizontal="true"
                    android:text="@string/action_sign_up" />
    </RelativeLayout>

    </ScrollView>
</RelativeLayout>
